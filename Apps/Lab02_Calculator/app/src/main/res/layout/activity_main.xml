<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="412dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:fontFamily="sans-serif-medium"
                android:text=" Rajkumar 2047120"
                android:textAlignment="gravity"
                android:textColor="#C4050505"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/expr"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="textEnd"
                android:textColor="#A36908BD"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="383dp"
                android:layout_height="135dp"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#6908BD"
                android:textSize="65sp" />

        </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#08000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:id="@+id/Row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/ac"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_ac"
                android:text="AC"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/del"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_del"
                android:text="DEL"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/percent"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_percnt"
                android:text="%"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/div"
                android:layout_width="103dp"
                android:layout_height="90dp"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_div"
                android:text="/"
                android:textColor="#6908BD"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:id="@+id/Row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_seven"
                android:text="7"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_eight"
                android:text="8"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_nine"
                android:text="9"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/mult"
                android:layout_width="103dp"
                android:layout_height="90dp"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_multp"
                android:text="*"
                android:textColor="#6908BD"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:id="@+id/Row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/four"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_four"
                android:text="4"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_five"
                android:text="5"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/six"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_six"
                android:text="6"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="103dp"
                android:layout_height="90dp"
                android:background="@drawable/ripple_effect_btn"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="click_minus"
                android:text="-"
                android:textColor="#6908BD"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:id="@+id/Row4"
